<idea-plugin>
    <id>ru.sber.ai-cucumber-assistant</id>
    <name>GigaCode Chat</name>
    <vendor email="ai-platform@sber.ru">Sber</vendor>
    <description>
        <![CDATA[
        Skeleton plugin that integrates with the agent-service backend to scan Cucumber steps
        and generate feature files from test cases.
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="ru.sber.aitestplugin.ui.toolwindow.AiToolWindowFactory"
                    id="GigaCode Chat"
                    anchor="right"
                    icon="/META-INF/pluginIcon.svg" />
        <projectConfigurable instance="ru.sber.aitestplugin.config.AiTestPluginSettingsConfigurable"
                             displayName="AI Test Agent"
                             groupId="tools" />
        <notificationGroup id="AI Cucumber Assistant" displayType="BALLOON" isLogByDefault="true" />
    </extensions>

</idea-plugin>
